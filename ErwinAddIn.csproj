<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>EliteSoft.Erwin.AddIn</RootNamespace>
    <AssemblyName>EliteSoft.Erwin.AddIn</AssemblyName>
    <PlatformTarget>x64</PlatformTarget>
    <UseWindowsForms>true</UseWindowsForms>

    <!-- COM Interop - register manually with regasm -->
    <ComVisible>true</ComVisible>
  </PropertyGroup>

  <ItemGroup>
    <!-- ADO.NET providers for multi-database support -->
    <PackageReference Include="Npgsql" Version="4.1.13" />
    <PackageReference Include="Oracle.ManagedDataAccess" Version="21.15.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="EAL">
      <HintPath>References\EAL.dll</HintPath>
      <Private>True</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="ModelConfigForm.Designer.cs">
      <DependentUpon>ModelConfigForm.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\erwin-admin\ErwinShared\ErwinShared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="References\EAL.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>EAL.dll</Link>
    </None>
  </ItemGroup>

  <!-- Copy EAL.dll directly to output directory (not in References subfolder) -->
  <Target Name="CopyEALToOutput" AfterTargets="Build">
    <Copy SourceFiles="$(ProjectDir)References\EAL.dll" DestinationFiles="$(OutputPath)EAL.dll" SkipUnchangedFiles="true" />
    <Message Text="Copied EAL.dll to $(OutputPath)" Importance="high" />
  </Target>

</Project>
